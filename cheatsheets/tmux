# Start tmux:
tmux

# Detach from tmux:
Ctrl-b d

# Restore tmux session:
tmux attach

# Detach an already attached session (great if you are moving devices with different screen resolutions)
tmux attach -d 

# Display session:
tmux ls

# Rename session:
Ctrl-b $

# Switch session:
Ctrl-b s

# Start a shared session:
tmux -S /tmp/your_shared_session
chmod 777 /tmp/your_shared_session

# Help screen (Q to quit):
Ctrl-b ?

# Scroll in window:
Ctrl-b PageUp/PageDown

# Reload configuation file
Ctrl-b : source-file /path/to/file

# Window management
# =================

# Create window:
Ctrl-b c

# Destroy window:
Ctrl-b x

# Switch between windows:
Ctrl-b [0-9]
or
Ctrl-b Arrows

# Split windows horizontally:
Ctrl-b %

# Split windows vertically:
Ctrl-b "

#rename pane
C-b ,

#zoom in on current pane
Ctrl-b z

#switch pane left/right
Ctrl-b {/}

#switch pane layout
C-b SPACE

#HELP
C-b ?

#Needs the logging plugin
#Start/stop logging
prefix + shift + p

#screen capture in current pane
prefix + alt + p

# save pane history
prefix + alt + shift + p
